#pragma once

#define NDMSPC_NAME "@CMAKE_PROJECT_NAME@"

#define NDMSPC_MAKE_VERSION(major, minor, patch) (((major) << 22) | ((minor) << 12) | (patch))
#define NDMSPC_VERSION_MAJOR(version) (static_cast<uint32_t>(version) >> 22)
#define NDMSPC_VERSION_MINOR(version) ((static_cast<uint32_t>(version) >> 12) & 0x3ff)
#define NDMSPC_VERSION_PATCH(version) (static_cast<uint32_t>(version) & 0xfff)
#define NDMSPC_VERSION_RELEASE "@PROJECT_VERSION_PATCH@"

#define NDMSPC_VERSION NDMSPC_MAKE_VERSION(@PROJECT_VERSION_MAJOR@, @PROJECT_VERSION_MINOR@, @PROJECT_VERSION_PATCH@)
