[Unit]
Description=NdmSpc notebook %I
After=network.target

[Service]
Type=simple
EnvironmentFile=/etc/ndmspc/notebook
EnvironmentFile=-/etc/ndmspc/notebook.%I
EnvironmentFile=-%h/.ndmspc/notebook
EnvironmentFile=-%h/.ndmspc/notebook.%I
ExecStart=/usr/bin/root --notebook --port $NDMSPC_NOTEBOOK_PORT $NDMSPC_NOTEBOOK_EXTRA_ARGS
Restart=on-abort

[Install]
WantedBy=multi-user.target
